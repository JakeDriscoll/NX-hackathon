<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MPV_Mobile.AddPhotoPage">
    <ContentPage.Content>
        <StackLayout>
            <Switch x:Name="doUpload" IsToggled="False" />
            <Image Source="@drawable/mpv_logo"/>
            <Image x:Name="PhotoImage"/>
            <Label Text="Add a photo to your patient history"
                HorizontalOptions="CenterAndExpand" 
                   x:Name="Header"/>
            <Image x:Name="PhotoImage" Source="@drawable/mpv_logo"/>
            <Button Text="GetPhoto" x:Name="TakePhoto" Style=""/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>