<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MPV_Mobile.ScheduleAppointment">
    <ContentPage.Content>
        <StackLayout
            VerticalOptions="Center"
            HorizontalOptions="Center"
            >
            <Label Text="Welcome to Scheduling!" />
            
            <DatePicker x:Name="scheduleAppointmentDatePicker" 
                Format="D"                       
                        />
            <TimePicker x:Name="scheduleAppointmentTimePicker"/>

            <Picker x:Name="providerList"
                    Title="Pick your provider"/>

            <Button Text="Request Appointment" x:Name="requestAppointment"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>